<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:CustomDialog.Templated_Controls">
    <Design.PreviewWith>
        <Border Background="RoyalBlue"
                Padding="10">
            <Border Background="White">
                <controls:HeaderButton MaxWidth="20" />
            </Border>
        </Border>
    </Design.PreviewWith>

    <!-- Base style -->
    <Style Selector="controls|HeaderButton">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Background="Transparent"
                        Margin="0, 5"
                        BorderThickness="2">
                    <Image Source="{TemplateBinding Icon}"/>
                </Button>
            </ControlTemplate>
        </Setter>
        <Setter Property="Icon" Value="/Assets/Icons/check.png" />
    </Style>
    
    <!-- Left arrow -->
    <Style Selector="controls|HeaderButton.arrowLeft">
        <Setter Property="Icon" Value="/Assets/Icons/arrow-left.png" />
    </Style>
    
    <!-- Right arrow -->
    <Style Selector="controls|HeaderButton.arrowRight">
        <Setter Property="Icon" Value="/Assets/Icons/arrow-right.png" />
    </Style>
</Styles>
