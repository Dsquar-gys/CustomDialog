<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:templatedControls="clr-namespace:CustomDialogLibrary.Templated_Controls">
    <Design.PreviewWith>
        <Border Background="RoyalBlue"
                Padding="10">
            <Border Background="White">
                <templatedControls:HeaderButton MaxWidth="20" />
            </Border>
        </Border>
    </Design.PreviewWith>

    <!-- Base style -->
    <Style Selector="templatedControls|HeaderButton">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Background="Transparent"
                        Margin="0, 5"
                        BorderThickness="2"
                        Command="{TemplateBinding Command}"
                        CommandParameter="{TemplateBinding CommandParameter}">
                    <Image Source="{TemplateBinding Icon}"/>
                </Button>
            </ControlTemplate>
        </Setter>
        <Setter Property="Icon" Value="/BakedAssets/check.png" />
    </Style>
    
    <!-- Left arrow -->
    <Style Selector="templatedControls|HeaderButton.arrowLeft">
        <Setter Property="Icon" Value="/BakedAssets/arrow-left.png" />
    </Style>
    
    <!-- Right arrow -->
    <Style Selector="templatedControls|HeaderButton.arrowRight">
        <Setter Property="Icon" Value="/BakedAssets/arrow-right.png" />
    </Style>
</Styles>
